!!!
%html{:lang => "en"}
  %head
    %title 
      -if @title
        #{@title} - 
      CloudMQTT
      -if name == 'index'
        \- A globally distributed MQTT broker
    %link(href='http://fonts.googleapis.com/css?family=Lato:400,700' rel='stylesheet' type='text/css')
    %link{:href => "/css/bootstrap.min.css", :rel => "stylesheet"}/
    %link{:href => "/css/site.min.css", :rel => "stylesheet"}/
    %link{:href => "/favicon.ico", :rel => "shortcut icon"}/
    /[if lt IE 9]
      %script(src="/js/html5shiv.js")
  %body
    :javascript
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-40908590-1', 'cloudmqtt.com');
      ga('send', 'pageview');

    .container
      -#.pull-right
        %ul.nav
          %li 
            %a{href: @dev ? 'http://localhost:9393/customer' : 'https://customer.cloudamqp.com/'} Control panel
      .page-header
        %ul.nav.nav-pills.pull-right
          %li{class: name == 'index' ? 'active' : ''}
            %a{:href => "/"} Home
          %li{class: name == 'plans' ? 'active' : ''}
            %a{:href => "/plans.html"} Plans
          %li{class: name =~ /^docs/ ? 'active' : ''}
            %a{:href => "/docs.html"} Documentation
          %li{class: name == 'support' ? 'active' : ''}
            %a{:href => "/support.html"} Support
        %h3
          CloudMQTT
          %small=@title
    !=yield
    %footer
      .container
        .row
          .span2
            .footer-banner
              %ul.nav.nav-list
                %li
                  %a{href: '/terms_of_service.html'} Terms of service
                %li
                  %a{href: '/program_policies.html'} Program policies
                %li
                  %a{href: '/privacy_policy.html'} Privacy policy
                %li
                  %a{href: '/imprint.html'} Imprint
          .offset8.span2
            %a{href: 'http://aws.amazon.com', target: '_blank'}
              %img{src: '/images/aws_48.png', height: 48}
