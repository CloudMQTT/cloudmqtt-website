!!!
%html{:lang => "en"}
  %head
    %title CloudMQTT - Globally distributed MQTT broker
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    / Loading Bootstrap
    %link{:href => "/css/bootstrap.css", :rel => "stylesheet"}/
    / Loading Flat UI
    %link{:href => "/css/flat-ui.css", :rel => "stylesheet"}/
    %link{:href => "/favicon.ico", :rel => "shortcut icon"}/
    / HTML5 shim, for IE6-8 support of HTML5 elements. All other JS at the end of file.
    /[if lt IE 9]
      <script src="/js/html5shiv.js"></script>
  %body
    .navbar.navbar-static-top.navbar-inverse
      .navbar-inner
        .container
          .pull-right
            %ul.nav
              %li 
                %a{href: @dev ? 'http://localhost:9393/customer' : 'https://customer.cloudamqp.com/'} Control panel
          %a.brand{:href => "/"} 
            CloudMQTT
          %ul.nav
            %li{class: name == 'plans' ? 'active' : ''}
              %a{:href => "/plans.html"} Plans
            %li{class: name =~ /^docs/ ? 'active' : ''}
              %a{:href => "/docs.html"} Documentation
            %li{class: name == 'support' ? 'active' : ''}
              %a{:href => "/support.html"} Support
    !=yield
    %footer
      .container
        .row
          .span2
            %br/
            %a{href: 'http://aws.amazon.com', target: '_blank'}
              %img{src: '/images/aws_48.png'}
          .offset6.span4
            .footer-banner
              %h3.footer-title Legal
              %ul
                %li
                  %a{href: '/terms_of_service.html'} Terms of service
                %li
                  %a{href: '/program_policies.html'} Program policies
                %li
                  %a{href: '/privacy_policy.html'} Privacy policy
                %li
                  %a{href: '/imprint.html'} Imprint
    / Load JS here for greater good =============================
    %script{:src => "/js/jquery-1.8.2.min.js"}
    %script{:src => "/js/jquery-ui-1.10.0.custom.min.js"}
    %script{:src => "/js/jquery.dropkick-1.0.0.js"}
    %script{:src => "/js/custom_checkbox_and_radio.js"}
    %script{:src => "/js/custom_radio.js"}
    %script{:src => "/js/jquery.tagsinput.js"}
    %script{:src => "/js/bootstrap-tooltip.js"}
    %script{:src => "/js/jquery.placeholder.js"}
    %script{:src => "http://vjs.zencdn.net/c/video.js"}
    %script{:src => "/js/application.js"}
    /[if lt IE 8]
      <script src="/js/icon-font-ie7.js"></script>
      <script src="/js/icon-font-ie7-24.js"></script>
